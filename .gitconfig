[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[web]
  browser = google-chrome

[push]
  default = matching

[color]
  ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold

[alias]
	b = branch
  c = commit -m
  d = diff
  l = log
  s = status

	aa = add --all
	bs = branch -avv
  ca = commit --amend -m
  co = checkout
  ls = log --oneline
  rb = rebase --interactive
